generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  quests Quest[]

  @@map("users")
}

model Quest {
  id          String    @id @default(uuid())
  title       String
  description String
  completed   Boolean   @default(false)
  slug        String    @unique
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  dueDate     DateTime  @default(dbgenerated("now() + interval '24 hours'"))
  playerId    String    @map("author_id")

  player  User     @relation(fields: [playerId], references: [id])
  goals   Goal[]
  rewards Reward[]

  @@map("quests")
}

model Goal {
  id        String  @id @default(uuid())
  statement String
  completed Boolean @default(false)
  questId   String  @map("quest_id")

  quest   Quest    @relation(fields: [questId], references: [id])
  rewards Reward[]

  @@map("goals")
}

enum RewardTypes {
  XP
  GOLD
  ITEM
}

model Reward {
  id      String      @id @default(uuid())
  type    RewardTypes @default(XP)
  amount  Int         @default(0)
  questId String?     @map("quest_id")
  goalId  String?     @map("goal_id")

  quest Quest? @relation(fields: [questId], references: [id])
  goal  Goal?  @relation(fields: [goalId], references: [id])

  @@map("rewards")
}
